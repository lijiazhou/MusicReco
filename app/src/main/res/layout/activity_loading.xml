<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.Loading"
    android:theme="@style/AppTheme.NoActionBar"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="120dp"
        android:textSize="60dp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:text="@string/loading_main_title"
        android:shadowDx="18.0"
        android:shadowDy="18.0"
        android:shadowRadius="8"
        android:shadowColor="@color/colorWhite"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="160dp"
        android:textColor="@color/colorWhite"
        android:shadowDx="10.0"
        android:shadowDy="10.0"
        android:shadowRadius="6"
        android:shadowColor="@color/colorLightGreen"
        android:text="@string/loading_sub_title"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:indeterminate="false"
        android:indeterminateTintMode="src_in"
        android:indeterminateTint="@color/colorOrange" />


</LinearLayout>
